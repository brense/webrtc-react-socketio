{
  "compilerOptions": {
    "target": "es2018",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": false,
    "allowSyntheticDefaultImports": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "lib": [
      "es2018",
      "esnext.asynciterable"
    ]
  },
  "include": [
    "src/signalingServer.ts",
    "src/serveStatic.ts",
    "src/iceConfigMiddleware.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
